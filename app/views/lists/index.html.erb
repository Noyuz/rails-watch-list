<div class="banner d-flex align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80);">
  <div class="container text-center">
    <span id="banner-typed-text"></span>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="top d-flex justify-content-between align-items-center">
      <h4>My lists</h4>
      <%= link_to new_list_path do %>
        <button type="button" class="btn btn-success">Create a movie list</button>
      <% end %>
    </div>
    <div class="cards">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.background_image %>)">
            <%= list.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
